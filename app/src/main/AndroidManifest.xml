<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nghenhacoffline">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NgheNhacOffline">
        <activity android:name=".Activity.LoadingActivity" android:theme="@style/Theme.NoActionBar"></activity>
        <activity android:name=".Activity.ShowSongActivity" />
        <activity android:name=".Activity.SongOfPlaylistActivity" />
        <activity android:name=".Activity.SearchActivity" />
        <activity android:name=".Activity.PlayMusicActivity" />
        <activity
            android:name=".Activity.WelcomeActivity"
            android:theme="@style/Theme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>