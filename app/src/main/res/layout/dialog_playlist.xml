<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvPlayList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="PlayList"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etPlayList"
        android:layout_width="273dp"
        android:layout_height="46dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Name of PlayList"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/tvPlayList"
        app:layout_constraintStart_toStartOf="@+id/tvPlayList"
        app:layout_constraintTop_toBottomOf="@+id/tvPlayList" />

    <Button
        android:id="@+id/btnOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Ok"
        app:layout_constraintStart_toStartOf="@+id/etPlayList"
        app:layout_constraintTop_toBottomOf="@+id/etPlayList" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Cancel"
        app:layout_constraintEnd_toEndOf="@+id/etPlayList"
        app:layout_constraintTop_toBottomOf="@+id/etPlayList" />

</androidx.constraintlayout.widget.ConstraintLayout>